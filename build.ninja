rule rst2html
  command = sed 's,^\([^\.].*:\):$$,\1\n\n.. code:: zsh,' $in | $
    PRETTYRST_EXTRAS=--no-source-link prettyrst /dev/stdin $out

rule rst2zsh
  command = tools/rst2zsh -d $out.dep $in $out && chmod +x $out
  depfile = $out.dep
  deps = gcc

build README.html: rst2html README.rst
build init: rst2zsh README.rst
default init
